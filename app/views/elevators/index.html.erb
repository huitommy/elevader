<h1>Hello!</h1>

<link href="http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css" rel="stylesheet">

<div class="row">
<% @elevators.each do |elevator| %>
  <div class="medium-4 columns" id="elevator-<%= elevator.id %>">
    <div class="card">
      <div class="image">
        <%= link_to image_tag(elevator.elevator.medium_elevator), elevator_path(elevator) %>
      </div>
      <div class="content">
        <span> <%= "#{elevator.building_name}" %></span>
        <% if current_admin || current_user == elevator.user %>
          <%= button_to "Delete", elevator, method: :delete, class: 'button tiny alert elevator_delete_button_index' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>


<%= paginate @elevators %>
<%= link_to "Add Elevator", new_elevator_path %>
